<h2>Add details for new book</h2>

<form class="form" action="/books/new" method="post">

  <label for="title" class="form-item">
    Title:
    <input type="text" name="title">
  </label>
  
  <label for="author" class="form-item">
    Author:
    <input type="text" name="author">
  </label>
  
  <label for="genre" class="form-item">
    Genre:
    <input type="text" name="genre">
  </label>

  <label for="rating" class="form-item">
    Rating (1-5):
    <input type="text" name="rating">
  </label>

  <label for="review" class="form-item">
    Review:
  </label>
  <textarea rows="5" cols="40" name="review">
  </textarea>
  
  
  <input type="hidden" name="cover">
  
  <input type="submit" name="" value="Submit">
</form>

