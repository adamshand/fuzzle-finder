{
  "name": "fuzzle-finder",
  "main": "index.js",
  "author": "Adam Shand",
  "license": "Copyheart",
  "scripts": {
    "start": "node index",
    "dev": "nodemon index --ignore books.json",
    "knex": "knex",
    "build": "knex migrate:latest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --watchAll",
    "format": "prettier -w *.js routes seeds migrations"

  },
  "repository": {
    "type": "git",
    "url": "git@github.com:adamshand/fuzzle-finder.git"
  },
  "eslintConfig": {
    "extends": "eda"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "watchPathIgnorePatterns": [
      "data.json"
    ]
  },
  "dependencies": {
    "exifr": "^7.1.3",
    "express": "^4.18.1",
    "express-handlebars": "^6.0.2",
    "knex": "^2.1.0",
    "sqlite3": "^5.0.8"
  },
  "devDependencies": {
    "jest": "^27.5.1",
    "prettier": "2.6.1",
    "supertest": "^6.2.2",
    "testing-library": "^0.0.2",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "eslint": "^8.10.0",
    "eslint-config-eda": "^1.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "nodemon": "^2.0.15"
